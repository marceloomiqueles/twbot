<% provide(:title, 'Ciudades') %>
<div class="center hero-unit">
  	<h1>Ciudades</h1>
	<% if flash[:notice] %>
      	<p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <%= link_to "Agregar", ciudades_nueva_path, class: "btn btn-large btn-primary" %>
    <table>
    	<tr>
    		<th>Nombre</th>
    		<th>Longitud</th>
    		<th>Latitud</th>
            <th>km a la redonda</th>
    		<th>Acciones</th>
    	</tr>
    	<% @ciudades.each do |ciudad| %>
	    	<tr>
	    		<td><%= ciudad.nombre %></td>
	    		<td><%= ciudad.longitud %></td>
	    		<td><%= ciudad.latitud %></td>
                <td><%= ciudad.km %></td>
	    		<td>
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <%= link_to "Editar", ciudades_editar_path(ciudad), class: "btn" %>
                            <%= link_to "Eliminar", ciudades_eliminar_path(ciudad), class: "btn", :method => :deleted, confirm: "EstÃ¡ seguro?" %>
                        </div>
                    </div>
                </td>
	    	</tr>
	    <% end %>
    </table>
</div>