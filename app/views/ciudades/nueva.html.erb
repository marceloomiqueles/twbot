<% provide(:title, 'Nueva Ciudad') %>
<h1>Nueva Ciudad</h1>
<% if flash[:error] %>
	<div class="mensajes_error">
		<p><%= flash[:error] %><p>
	</div>
<% end %>
<%= form_for @ciudad, :url => ciudades_nueva_path do |form| %>
	<div class="form-group">
		<%= form.label :nombre %>
		<%= form.text_field :nombre, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= form.label :longitud %>
		<%= form.text_field :longitud , :class => "form-control"%>
	</div>

	<div class="form-group">
		<%= form.label :latitud %>
		<%= form.text_field :latitud, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= form.label :km, "Kilómetros a la redonda (del geo punto)" %>
		<div class="input-group">
			<%= form.text_field :km, value: '100', :class => "form-control" %>
			<div class="input-group-addon">Kilómetros</div>
		</div>
	</div>

	<%= form.submit "Guardar", class: "btn btn-default" %>
<% end %>