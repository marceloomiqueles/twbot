<% provide(:title, 'Editar Ciudad') %>
<div class="center hero-unit">
  	<h1>Editar Ciudad</h1>
  	<% if flash[:error] %>
      	<div class="mensajes_error">
      		<p><%= flash[:error] %><p>
      	</div>
    <% end %>
  	<div class="form_puntos origen">
		<%= form_for @ciudad, :url => ciudades_editar_path(@ciudad) do |form| %>
			<fieldset class="fields">
				<div class="field control-group">
					<%= form.label :nombre %>
					<%= form.text_field :nombre %>
				</div>

				<div class="field control-group numero">
					<%= form.label :longitud %>
					<%= form.text_field :longitud %>
				</div>

				<div class="field control-group interseccion">
					<%= form.label :latitud %>
					<%= form.text_field :latitud %>
				</div>

				<div class="field control-group">
					<%= form.label :km, "Kilometros a la redonda (del geo punto)" %>
					<%= form.text_field :km, {value: '100'} %>
				</div>
			</fieldset>

			<fieldset class="actions">
				<%= form.submit "Guardar", class: "btn btn-large btn-primary" %>
			</fieldset>
		<% end %>
	</div>
</div>