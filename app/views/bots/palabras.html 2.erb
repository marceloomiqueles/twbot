<% provide(:title, 'Palabras') %>
<div class="center hero-unit">
  	<h1>Palabras bot <%= @bot.nombre %></h1>
	<% if flash[:notice] %>
      	<p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <%= link_to "Agregar Palabra", bot_agregar_palabra_path(@bot), class: "btn btn-large btn-primary" %>
    <table>
    	<tr>
    		<th>Palabra</th>
    		<th>Acciones</th>
    	</tr>
    	<% @bot.palabras.each do |palabra| %>
	    	<tr>
	    		<td><%= palabra.palabra %></td>
	    		<td>
	    			<div class="btn-toolbar">
                        <div class="btn-group">
                            <%= link_to "Eliminar", bot_eliminar_palabra_path(@bot, palabra), class: "btn" %>
                        </div>
                    </div>
	    		</td>
	    	</tr>
	    <% end %>
    </table>
</div>